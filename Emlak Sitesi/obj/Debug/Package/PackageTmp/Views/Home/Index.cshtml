@model List<Emlak_Sitesi.Models.Ilan>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
    List<Emlak_Sitesi.Models.Ilan> ilanlar = Model;
}
<script src="~/wwwroot/js/angular.min.js"></script>

<div class="col-md-12  pr0 padding-top-40 properties-page" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-md-12 clear">
        <div id="list-type" class="proerty-th">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-3 p0">
                    <div class="box-two proerty-item">
                        <div class="item-thumb">
                            <a href="property-1.html"><img src="~/wwwroot/assets/img/demo/property-3.jpg"></a>
                        </div>
                        <div class="item-entry overflow">
                            <h5>
                                <a href="property-1.html">
                                    @item.Baslik
                                </a>
                            </h5>
                            <div class="dot-hr"></div>
                            <span class="pull-left"><b> Area :</b> @item.BuyuklukM m </span>
                            <span class="proerty-price pull-right"> @item.Fiyat ₺</span>
                            <p style="display: none;">
                                @item.IlansAciklama
                            </p>
                            <div class="property-icon">
                                <img src="~/wwwroot/assets/img/icon/bed.png">(@item.OdaSayisi)|
                                <img src="~/wwwroot/assets/img/icon/shawer.png">|
                                <img src="~/wwwroot/assets/img/icon/cars.png">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {


    });
</script>
