@model Form
@{
    ViewData["Title"] = "Fikirtepe Kentsel Emlak | İletişim";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">FİKİRTEPE KENTSEL EMLAK İLETİŞİM</h1>

            </div>
        </div>
    </div>
</div>
<div class="content-area recent-property padding-top-40" style="background-color: #FFF;">
    <div class="container">
        <div class="col-md-12">
            @if (ViewBag.msg != "")
            {
                
                    <h6 style="color:blue"><marquee behavior=alternate>@Html.Raw(ViewBag.msg)</marquee></h6>
                    }
                    <div class="" id="contact1">
                        <div class="row">
                            <div class="col-sm-4">
                                <h3><i class="fa fa-map-marker"></i> Adres</h3>
                                <p>
                                    Fikirtepe Mahallesi
                                    <br>Mandıra Caddesi No:36
                                    <br />
                                    <br />
                                    <strong>İstanbul / Kadiköy</strong>
                                </p>
                            </div>
                            <!-- /.col-sm-4 -->
                            <div class="col-sm-4">
                                <h3><i class="fa fa-phone"></i> Telefon</h3>
                                <p class="text-muted">Emlak Danışmanınız İsmail MAHMUTOĞLU ile iletişime geçmek için arayınız.</p>
                                <p><strong>+90 532 682 49 44</strong></p>
                            </div>
                            <!-- /.col-sm-4 -->
                            <div class="col-sm-4">
                                <h3><i class="fa fa-envelope"></i> Mail</h3>
                                <p class="text-muted">Lütfen email ile iletişime geçmek için aşağıdaki mail adresini kullanınız.</p>
                                <ul>
                                    <li><strong><a href="mailto:">info@fikirtepekentselemlak.com</a></strong>   </li>

                                </ul>
                            </div>
                            <!-- /.col-sm-4 -->
                        </div>
                        <!-- /.row -->

                        <hr>
                        <div class="col-md-12">
                            <iframe class="col-md-12 col-sm-12" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2129.4131470699044!2d29.050199749507144!3d40.99363332578015!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xeb3186e95a384e23!2sFikirtepe+Kentsel+Emlak!5e0!3m2!1str!2str!4v1529743782008" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                        <br />

                        <hr>
                        <h2>İletişim Formu</h2>

                        <span class="text text-danger">@Html.ValidationSummary()</span>
                        @using (Html.BeginForm("Iletisim", "Home", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="firstname">Ad Soyad</label>
                                        @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(x => x.AdSoyad)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="lastname">Telefon</label>
                                        @Html.TextBoxFor(x => x.Tel, new { @class = "form-control" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(x => x.Tel)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="subject">Konu</label>
                                        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(x => x.Konu)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="message">Mesaj</label>
                                        @Html.TextAreaFor(x => x.Mesaj, new { @class = "form-control" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(x => x.Mesaj)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Mesaj Gönder</button>
                                </div>

                            </div>
                        }

                    </div>
            </div>
            <!-- /.col-md-9 -->

        </div>
    </div>


